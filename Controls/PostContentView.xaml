<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="This"
             x:Class="Fylth.Controls.PostContentView">
    
    <ContentView.Content>
        <Grid RowDefinitions="*"
              ColumnDefinitions="*"
              BindingContext="{x:Reference This}">
            
            <Image Source="{Binding CurrentPost.Preview.Url}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Aspect="AspectFit"
                   Grid.Row="0"
                   Grid.Column="0" />
            
        </Grid>
    </ContentView.Content>
</ContentView>